{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "no-plusplus": "off",
    "no-mixed-operators": "off",
    "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
    "no-param-reassign": ["error", { "props": false }],
    "import/extensions": ["error", "always", { "ignorePackages": true }],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "max-len": ["error", { "code": 120 }],
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["__webpack_require__", "__webpack_modules__"] }],
    "camelcase": ["error", { "ignoreGlobals": true, "allow": ["^__webpack"] }],
    "no-continue": "off",
    "indent": ["error", 2, { 
      "SwitchCase": 0,
      "ignoredNodes": ["ConditionalExpression"]
    }],
    "no-restricted-globals": ["error", "event", "fdescribe"]
  },
  "globals": {
    "document": "readonly",
    "parseAndCalculate": "readonly"
  }
}